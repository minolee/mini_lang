PROGRAM : [DECLARATION]*[MAIN]?

DECLARATION : [FUNCTION_DECLARATION]|[CLASS_DECLARATION]|[VAR_DECLARATION]
FUNCTION_DECLARATION : [TYPE]<ID><LPARENTHESE>([TYPE][ID])*<RPARENTHESE>[COMPLEX_STATEMENT]

COMPLEX_STATEMENT : <LBRACE>[STATEMENT]*<RBRACE>
STATEMENT : [IF_STATEMENT]|[WHILE_STATEMENT]|[FOR_STATEMENT]|[ASSIGN_STATEMENT]|[VAR_DECLARATION]|[COMPLEX_STATEMENT]
IF_STATEMENT : <IF><LPARENTHESE>[EXPRESSION]<RPARENTHESE>[STATEMENT]
WHILE_STATEMENT : <WHILE><LPARENTHESE>[EXPRESSION]<RPARENTHESE>[STATEMENT]
DO_WHILE_STATEMENT : <DO>[STATEMENT]<WHILE><LPARENTHESE>[EXPRESSION]
FOR_STATEMENT : <FOR><LPARENTHESE>[ASSIGN_STATEMENT]<SEMICOLON>[EXPRESSION]<SEMICOLON>[EXPRESSION]<RPARENTHESE>[STATEMENT]
ASSIGN_STATEMENT : <ID>([<EQ>|[UNARY_OP])[EXPRESSION])

#Expressions
EXPRESSION : [EXPR1]
EXPR1 : (<EQ>|<NE>|<GT>|<LT>|<GTE>|<LTE>)[EXPR2]
EXPR2 :
EXPR3 :
EXPR4 :
#base case
??? : <LPARENTHESE>[EXPR]<RPARENTHESE>|<ID>